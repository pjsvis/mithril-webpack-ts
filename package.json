{
  "name": "mithril-webpack-ts",
  "version": "0.0.1",
  "description": "Mithril / Webpack / TypeScript Example",
  "scripts": {
    "build": "webpack --config scripts/webpack.config.prod.js",
    "develop": "touch public/css/app.css && webpack-dev-server -d --port 3000 --hot --config scripts/webpack.config.dev.js",
    "watch": "webpack --watch --config scripts/webpack.config.dev.js",
    "clean": "rm -f public/css/*.css public/js/*.js",
    "start": "npm-run-all clean develop"
  },
  "license": "MIT",
  "dependencies": {
    "eslint": "^7.5.0",
    "mithril": "^1.1.1",
    "tachyons": "^4.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@types/mithril": "^1.1.2",
    "@types/requirejs": "^2.1.29",
    "awesome-typescript-loader": "^3.1.3",
    "babel-loader": "^8.1.0",
    "css-loader": "^0.28.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "mithril-tsx-component": "^3.0.0",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "optimize-css-assets-webpack-plugin": "^1.3.1",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.17.0",
    "tslint": "^5.2.0",
    "tslint-microsoft-contrib": "git://github.com/Microsoft/tslint-microsoft-contrib.git#releases",
    "typescript": "^3.9.7",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "webpack": "^2.5.0",
    "webpack-dev-server": "^2.4.5"
  }
}
